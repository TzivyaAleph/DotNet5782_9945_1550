<Window x:Class="PL.SighnInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="SighnInWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="Images/main.jpg" Opacity="0.65"></ImageBrush>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Welcome! Please choose one of the folowing options to sign in:" HorizontalAlignment="Stretch" VerticalAlignment="Center" FontWeight="Black"/>
        <ComboBox Name="userTipe" Grid.Row="1" VerticalAlignment="Top"  SelectedItem="{Binding SelectedUserType, Mode=TwoWay}"/>
    </Grid>
</Window>
